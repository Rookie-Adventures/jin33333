{
  "name": "jinshanshan",
  "private": true,
  "type": "module",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "npm run type-check",
    "type-check": "npm run type-check:shared && npm run type-check:frontend && npm run type-check:backend",
    "type-check:shared": "cd shared && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "find:deadcode": "eslint . --ext .ts,.tsx --rule 'no-unused-vars: error' --rule '@typescript-eslint/no-unused-vars: error'",
    "find:duplicates": "jscpd . --ignore \"**/*.test.{ts,tsx},**/node_modules/**,**/dist/**,**/coverage/**\" --threshold 10",
    "lint": "npm run lint:shared && npm run lint:frontend && npm run lint:backend",
    "lint:shared": "cd shared && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.5",
    "vitepress": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3"
  }
}
