{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    "src/utils/**/*.d.ts",
    "src/utils/http/**/*.d.ts",
    "src/utils/security/**/*.d.ts",
    "*.js",
    "*.ts",
    ".eslintrc.js",
    "eslint.config.js",
    "vite.config.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "dist", "build"]
} 